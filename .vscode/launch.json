{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        // Next.js PWA Debugging
        {
            "name": "Next.js: Debug Server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "cd pwa && npm run dev",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "Next.js: Debug Client-side",
            "type": "chrome",
            "request": "launch",
            "url": "https://localhost/admin",
            "webRoot": "${workspaceFolder}/pwa",
            "sourceMapPathOverrides": {
                "webpack://_N_E/*": "${workspaceFolder}/pwa/*"
            }
        },
        {
            "name": "Next.js: Debug Full Stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "cd pwa && npm run dev",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        
        // PHP/Symfony API Debugging (Xdebug)
        {
            "name": "PHP: Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/app": "${workspaceFolder}/api"
            }
        },
        {
            "name": "PHP: Launch Currently Open Script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        },
        
        // Attach to running Docker containers
        {
            "name": "Docker: Attach to PWA",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/pwa",
            "remoteRoot": "/app",
            "protocol": "inspector"
        }
    ]
}
